<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailRepoActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar_detail_repo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:src="@tools:sample/avatars"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tv_title_repo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ttitulo"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv_description_repo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descricão"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_language_repo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linguagem"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_user_repo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="usuário"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_navegar_repositorio_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:padding="14dp"
        android:layout_margin="16dp"
        android:text="Acessar Repositório"/>

</LinearLayout>