<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.antoniojose.app.repositories">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_app_repository"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_app_repository"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppRepositories">
        <activity
            android:name=".ui.DetailRepoActivity"
            android:exported="false" android:parentActivityName=".ui.MainActivity" android:theme="@style/Theme.AppRepositoriesActionBar"/>
        <activity android:name=".ui.MainActivity" android:theme="@style/Theme.AppRepositories"/>

        <activity android:name=".ui.StartScreenActivity" android:theme="@style/Theme.AppRepositories">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>